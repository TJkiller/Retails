@{
    ViewData["Title"] = "Welcome to ABC Retail";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 15px 0;
            text-align: center;
        }

     

            .hero h1 {
                font-size: 3.5rem;
                font-weight: 700;
                margin-bottom: 10px;
            }

            .hero p {
                font-size: 1.25rem;
            }

        .content {
            padding: 60px 0;
        }

        .card-custom {
            border: 0;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-custom {
            background-color: #333;
            color: #fff;
            border-radius: 50px;
            padding: 10px 30px;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #555;
                color: #fff;
            }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        .img-fluid {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <header>
        <h1>Welcome to ABC Retail</h1>
    </header>



    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="card card-custom text-dark bg-light mb-5">
                        <div class="card-body text-center">
                            <h2 class="card-title mb-4">Explore Our Offerings</h2>
                            <p class="card-text">
                                At ABC Retail, we are committed to providing an exceptional shopping experience with a diverse range of products. From the latest electronics and fashion to everyday essentials, our inventory is curated to meet your needs. Whether you're shopping for yourself or searching for the perfect gift, we offer high-quality items and excellent customer service.
                                <br><br>
                                Our online store is designed to offer a seamless shopping experience, with easy navigation and secure payment options. Explore our categories, discover new arrivals, and enjoy special offers tailored just for you. ABC Retail is your trusted partner for all your retail needs.
                            </p>
                            <a href="@Url.Action("Create", "Customer")" class="btn btn-custom">Create Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 ABC Retail. All rights reserved.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
